{
  "name": "home_excersise_2",
  "version": "1.0.0",
  "description": "managin products with REST API",
  "main": "index.js",
  "scripts": {
    "build:run": "./node_modules/.bin/tsc",
    "build:clean": "rm -rf ./dist",
    "copy-files": "mkdir dist && cd dist && mkdir public && cd .. && cp -R ./src/static/** ./dist/public",
    "clean-and-copy": "npm run build:clean && npm run copy-files",
    "build": "npm run build:clean&& npm run build:run",
    "serve": "node dist/index.js",
    "start": "npm run build && npm run serve",
    "watch:ts": "./node_modules/.bin/tsc -w",
    "watch:js": "./node_modules/.bin/nodemon dist/index.js",
    "watch": "./node_modules/.bin/tsc-watch --onSuccess \"npm run watch:js\""
  },
  "author": "yura",
  "license": "ISC",
  "dependencies": {
    "@types/dotenv": "^6.1.1",
    "@types/joi": "^14.3.3",
    "bcrypt": "^3.0.6",
    "cors": "^2.8.5",
    "dotenv": "^8.0.0",
    "express": "^4.17.0",
    "joi": "^14.3.1",
    "jsonwebtoken": "^8.5.1",
    "nodemon": "^1.19.1",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.5",
    "@types/express": "^4.16.1",
    "@types/jsonwebtoken": "^8.3.2",
    "@types/node": "^12.0.4",
    "@types/passport": "^1.0.0",
    "@types/passport-jwt": "^3.0.1",
    "@types/passport-local": "^1.0.33",
    "ts-node": "^8.1.0",
    "tsc-watch": "^2.2.1",
    "tslint": "^5.17.0",
    "typescript": "^3.5.1"
  }
}
